<?xml version="1.0" encoding="UTF-8"?>
<schemas>
   <schema name="Player1">
      <action type="Trigger" name="Throttle">
         <bind>Keyboard/Up</bind>
      </action>
      <action type="Trigger" name="Brake">
         <bind>Keyboard/Down</bind>
      </action>
      <action type="Trigger" name="HandBrake">
         <bind>Keyboard/Space</bind>
      </action>
      <action type="AnalogAxis" name="Steering" MinimumValue="-100" MaximumValue="100" EmulationReturnValue="0" EmulationSpeed="500" EmulationReturnSpeed="500">
		  <binding>
		      <bind role="increase">Keyboard/Right</bind>
		      <bind role="decrease">Keyboard/Left</bind>
		  </binding>
	  </action>
      <action type="Trigger" name="SteerLeft">
         <bind>Keyboard/Left</bind>
      </action>
      <action type="Trigger" name="ShiftUp">
         <bind>Keyboard/A</bind>
      </action>
      <action type="Trigger" name="ShiftDown">
         <bind>Keyboard/Z</bind>
      </action>
      <action type="Trigger" name="Boost">
	     <bind>Keyboard/Control_L</bind>
	     <bind>Keyboard/Control_R</bind>
	  </action>
	  <action type="Trigger" name="FlipLeft">
		 <bind>Keyboard/Q</bind>
	  </action>
	  <action type="Trigger" name="FlipRight">
	     <bind>Keyboard/W</bind>
	  </action>
   </schema>
