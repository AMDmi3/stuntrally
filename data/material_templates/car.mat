// RS

material chasis/Material#1
{
	parent base
	envMap ReflectionCube
	env_map true
	diffuse 1.0 1.0 1.0
	ambient 1.0 1.0 1.0
	specular 0.7 0.7 0.7 32
	fresnelScaleBiasPower 0.73 0.07 4
	diffuseMap chasis.png
	terrain_light_map true
	terrain_light_map_toggleable true
}


