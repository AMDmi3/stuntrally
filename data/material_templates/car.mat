material car_body
{
	parent base
	diffuseMap body00_add.png
	carPaintMap body00_red.png
	reflMap refl.png
	refl_map true
    env_map true
    car_paint_map true
    terrain_light_map true
    terrain_light_map_toggleable true
    fresnel true
    fresnelScaleBiasPower 0.79 0.07 4
    specular 1 1 1 128
}

material car_glass
{
	parent base
	diffuseMap glass.png
	depth_write off
	scene_blend alpha_blend
	specular 0.9 0.9 0.9 96
	ambient 0.4 0.4 0.4
	diffuse 0.9 0.9 0.9
	fresnelScaleBiasPower 0.75 0.15 4
	env_map true
	fresnel true
	specular_alpha true
	terrain_light_map true
	terrain_light_map_toggleable true
}

material car_ghost
{
	parent base
	diffuseMap white.png
}

material car_interior
{
	parent base
	diffuseMap interior.png
	terrain_light_map true
	terrain_light_map_toggleable true
}

material cartire_front
{
	parent base
	diffuseMap wheel.png
	terrain_light_map true
	terrain_light_map_toggleable true
}

material cartire_rear
{
	parent base
	diffuseMap wheel.png
	terrain_light_map true
	terrain_light_map_toggleable true
}



// ES

material car_body_ES
{
    parent car_body
    normal_map true
    normalMap ES_normal.png
    spec_map true
    specMap ES_spec.png
}

material car_interior_ES
{
    parent car_interior
    normal_map true
    normalMap ES_interior_normal.jpg
}

material cartire_front_ES
{
    parent cartire_front
    normal_map true
    normalMap ES_wheel_normal.jpg
    spec_map true
    specMap ES_wheel_spec.png
}

material cartire_rear_ES
{
    parent cartire_front_ES   
}



