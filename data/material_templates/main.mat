material base
{
	diffuse 1.0 1.0 1.0 1.0
	specular 0.4 0.4 0.4 32
	ambient 1.0 1.0 1.0
	specular 0 0 0 32

	cull_hardware default

    scene_blend default
    depth_write default
    alpha_rejection default
    
    alpha_map false
    normal_map false
    env_map false
    refl_map false
    
    bump_scale 1
    fresnelScaleBiasPower 0.79 0.07 4
    fresnel false

	pass
	{
		vertex_program main_vertex
		fragment_program main_fragment

		diffuse $diffuse
		specular $specular
		ambient $ambient
		specular $specular
		
		cull_hardware $cull_hardware
	
        scene_blend $scene_blend
        alpha_rejection $alpha_rejection
        depth_write $depth_write

		shader_properties
		{
		    alpha_map $alpha_map
		    normal_map $normal_map
		    env_map $env_map
		    refl_map $refl_map
		    
		    fresnel $fresnel
		    fresnelScaleBiasPower $fresnelScaleBiasPower

		    bump_scale $bump_scale
		}

		texture_unit diffuseMap
		{
			texture $diffuseMap
			create_in_ffp true
		}
		
		texture_unit alphaMap
		{
		    texture $alphaMap
		}
		
		texture_unit normalMap
		{
		    texture $normalMap
		}
		
		texture_unit envMap
		{
		    texture ReflectionCube
		}
		
		texture_unit reflMap
		{
		    texture $reflMap
		}
		
		texture_unit shadowMap0
        {
            content_type shadow
            tex_address_mode clamp
            filtering none
        }
        texture_unit shadowMap1
        {
            content_type shadow
            tex_address_mode clamp
            filtering none
        }
        texture_unit shadowMap2
        {
            content_type shadow
            tex_address_mode clamp
            filtering none
        }
	}
}


material base_shadowcaster
{
	pass
	{
		fog_override true
	}
}
