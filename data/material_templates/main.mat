material base
{
	shadow_caster_material base_shadowcaster

	diffuse 1.0 1.0 1.0 1.0
	specular 0.4 0.4 0.4 32
	ambient 1.0 1.0 1.0

	number_of_foreachs 8
	col 0.3 0.9 0.3

	pass
	{
		vertex_program main_vertex
		fragment_program main_fragment

		diffuse $diffuse
		specular $specular
		ambient $ambient

		shader_properties
		{
			asdf true
			testasdf 123ish
			number_of_foreachs $number_of_foreachs
			color_multiplier $col
		}

		texture_unit diffuse
		{
			texture $diffuseMap
			create_in_ffp true
		}
	}
}


material base_shadowcaster
{
	pass
	{
		vertex_program shadowcaster_vertex
		fragment_program shadowcaster_fragment
		fog_override true

		// $ refers to context, in this case the material instance that uses this this material as a shadow caster material (shadow_caster_material)
		cull_hardware $cull_hardware
	}
}
