material road_terrain
{
	parent base
	
    alpha_map true
    depth_write off
    scene_blend alpha_blend
    alphaMap roadAlpha.png
    depth_bias 3
    terrain_light_map true
}

material road
{
    parent base
    depth_bias 3
}


