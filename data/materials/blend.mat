material blendMat
{
	//  Height, Angle, Noise  params for 4 layers
	Hmin 0 0 0 0
	Hmax 0 0 0 0
	Hsmt 0 0 0 0

	Amin 0 0 0 0
	Amax 0 0 0 0
	Asmt 0 0 0 0

	Nmul 0 0 0 0

    pass
    {
        vertex_program blend_vertex
        fragment_program blend_fragment
        
		depth_check off
		depth_write off
		cull_hardware none
        fog_override true
        
        shader_properties
        {
			Hmin $Hmin
			Hmax $Hmax
			Hsmt $Hsmt
				 
			Amin $Amin
			Amax $Amax
			Asmt $Asmt
			  
			Nmul $Nmul
        }

        texture_unit samHMap
        {
            texture HmapTex
            tex_address_mode clamp
        }
        texture_unit samAng
        {
            texture AnglesRTT
            tex_address_mode clamp
        }
    }
}
