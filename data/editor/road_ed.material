material circle_smooth : ppx_diffuse
{
	set $ambientCol  "0.2 0.8 0.6"
	set $diffuseCol  "0.15 0.2 0.15"
	set $specularCol "0.15 0.3 0.25"
	set $shininess "32"
	set $depthBias "3"
	set_texture_alias diffuseMap ter_smooth.png
