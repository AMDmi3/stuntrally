//------------------------------------------------------------
material circle_deform : ppx_diffuse
{
	set $ambientCol  "0.3 0.8 0.1"
	set $diffuseCol  "0.15 0.3 0.15"
	set $specularCol "0.25 0.3 0.25"
	set $shininess "32"
	set $depthBias "3"
	set_texture_alias diffuseMap ter_deform.png
