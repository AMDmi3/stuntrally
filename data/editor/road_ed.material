material circle_height : ppx_diffuse
{
	set $ambientCol  "0.6 0.9 0.6"
	set $diffuseCol  "0.15 0.3 0.15"
	set $specularCol "0.25 0.3 0.25"
	set $shininess "32"
	set $depthBias "3"
	set_texture_alias diffuseMap ter_deform.png
}


//  road render to texture
//------------------------------------------------------------

material render_clr : ppx_render
{
	set $ambientCol  "0.0 0.0 0.0"
	set $diffuseCol  "0.7 0.7 0.7"
	set $depthBias "3"
}

material render_grass : ppx_render_gr
{
	set $depthBias "3"
}

material road_mini
{
	receive_shadows off
	technique
	{
		pass
		{
			lighting off
			texture_unit
			{
				texture RttTex
			}
		}
	}
}

