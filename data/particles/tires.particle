particle_system Boost
{
    material        	Boost
    particle_width  	0.21
    particle_height 	0.21
    cull_each       	false
    quota           	300
    billboard_type  	point
    sorted				false
    local_space			true

    // Area emitter  Point
    emitter Box
    {
		width 0.04
		height 0.04
		depth 0.04
	    angle 0
	    position 0 0 0
	    direction 1 0 0

	    emission_rate 100
		time_to_live 0.2
	    velocity_min 2.30
	    velocity_max 2.50

        colour 0.2 0.4 0.7 0.9
        //colour 0.4 0.6 1.0 0.3
        //colour_range_start  0.8 0.8 0.8
        //colour_range_end  1 1 1
    }

    // Fader
    affector ColourFader
    {
        red   -2.6
        green -2.3
        blue  -2.0
        alpha -1.6
    }

    affector Scaler
    {
   	    rate -0.30
    }
}


