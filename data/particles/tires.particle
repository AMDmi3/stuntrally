//  Dust  . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

particle_system Adust
{
	material			Dust
	quota				1000
	particle_width		1.6
	particle_height		1.6
	cull_each			true
	billboard_type		point
    sorted				true

	emitter Box
	{
		angle	30
		position	0 0.2 0
		direction	0 1 0
		width	0.25
		height	0.35
		depth	0.45  //h

		colour				1 0.78 0.55  0.7
		colour_range_start	1 0.78 0.50  0.5
		colour_range_end	1 0.83 0.60  0.7

		velocity_min	0.0
		velocity_max	0.4
		time_to_live_min	4
		time_to_live_max	6
	}

	affector Scaler
	{
		rate	0.56
	}

	affector ColourFader
	{
		red		-0.011
		green	-0.023
		blue	-0.023
		alpha	-0.130
	}
}

