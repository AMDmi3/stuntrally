//  Smoke  -------------------------------------------------

particle_system Smoke
{
    material        	Smoke
    particle_width  	0.3
    particle_height 	0.3
    cull_each       	false
    quota           	1000
    billboard_type  	point
    sorted				true

    // Area emitter  Point
    emitter Box
    {
		width 0.2
		height 0.3
		depth 0.4
	    angle 35
	    position 0 0.5 0.5
	    direction 1.2 0.2 -0.8

	    emission_rate 100
		time_to_live 2
	    velocity_min 0.50
	    velocity_max 0.80

        colour 0.9 0.9 0.9 0.4
        //colour_range_start  0.8 0.8 0.8
        //colour_range_end  1 1 1
    }

    // Fader
    affector ColourFader
    {
        //red -0.05
        //green -0.05
        //blue -0.05
        alpha -0.6
    }

    affector Rotator
    {
	    rotation_range_start 0
	    rotation_range_end 360
	    rotation_speed_range_start -100
	    rotation_speed_range_end 200
    }

    affector Scaler
    {
   	    rate 0.40
    }
}


