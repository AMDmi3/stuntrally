material RainDrop
{
	receive_shadows off
	technique
	{
		pass
		{
			lighting off
			depth_write off
			scene_blend alpha_blend
			diffuse vertexcolour
			//alpha_rejection greater 32
			//transparent_sorting on

			texture_unit
			{
				tex_address_mode clamp
				texture droplet.png
			}
		}
	}
}

