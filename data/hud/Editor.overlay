
Editor/CameraOverlay
{
	zorder 500
	container BorderPanel(Editor/CameraPanel)
	{
		metrics_mode pixels
		vert_align bottom
		left  70
		width 180
		top	-50
		height	25
		//material hud/info

		element TextArea(Editor/Camera)
		{
			metrics_mode pixels
			left 8
			top 2
			width 170
			height 22
			font_name Console
			char_height 21
			caption Camera
			colour_top	0.4 0.7 0.7
			colour_bottom 0.9 1.0 1.0
		}
				
	}

	container BorderPanel(Editor/CameraInfoPanel)
	{
		metrics_mode pixels
		vert_align bottom
		left  250
		width 750
		top	-50
		height	50
		//material hud/info

		element TextArea(Editor/CameraInfo)
		{
			metrics_mode pixels
			left 15
			top 2
			width 620
			height 24
			font_name Console
			char_height 23
			caption Camera Info
			colour_top	0.4 0.7 0.5
			colour_bottom 0.9 1.0 0.95
		}
				
	}

}

